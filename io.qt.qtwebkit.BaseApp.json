{
  "id": "io.qt.qtwebkit.BaseApp",
  "runtime": "org.kde.Platform",
  "sdk": "org.kde.Sdk",
  "runtime-version": "5.12",
  "separate-locales": false,
  "modules": [
    {
      "name": "qtwebkit",
      "buildsystem": "cmake-ninja",
      "builddir": true,
      "config-opts": [
        "-DCMAKE_BUILD_TYPE=Release",
        "-DCMAKE_INSTALL_LIBDIR=lib",
        "-DPORT=Qt",
        "-DUSE_SYSTEM_MALLOC=ON",
        "-DENABLE_JIT=OFF",
        "-DENABLE_API_TESTS=OFF",
        "-DENABLE_ALLINONE_BUILD=OFF"
      ],
      "post-install": [
        "mv /app/mkspecs /app/lib"
      ],
      "sources": [
        {
          "type": "archive",
          "url": "https://github.com/qtwebkit/qtwebkit/releases/download/qtwebkit-5.212.0-alpha3/qtwebkit-5.212.0-alpha3.tar.xz",
          "sha256": "357eee582445574472e410ebece632d06fa0ec94358fc4345f2a713922df5e17"
        },
        {
          "type": "patch",
          "path": "patches/reduce_linker_memory_use.patch"
        },
        {
          "type": "patch",
          "path": "patches/path_max.diff"
        },
        {
          "type": "patch",
          "path": "patches/reduce_exports.diff"
        }
      ]
    }
  ]
}
