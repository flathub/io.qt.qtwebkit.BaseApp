        },
        {
          "type": "patch",
          "path": "patches/fix_ftbfs_x32.diff"
        },
        {
          "type": "patch",
          "path": "patches/fix_selectedHtml_segfault.diff"
        },
        {
          "type": "patch",
          "path": "patches/fix-trojita-plaintext.patch"
